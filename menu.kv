#:kivy 1.9.0
<MainMenu>:
    canvas.before:
        Color:
            rgba:0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        text: root.parent.menu_title
        font_size: dp(60)
        pos_hint: {"center_x":0.5, "center_y": 0.6}
        font_name: "fonts/fonts.ttf"
    Button:
        text: root.parent.button_text
        font_size: dp(30)
        pos_hint: {"center_x":0.5, "center_y": 0.4}
        size_hint: .2, .15
        background_normal: ""
        background_color: 1, .3, .4, .85
        on_press: root.parent.on_click_start()